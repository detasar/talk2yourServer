# =============================================================================
# Talk2YourServer - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# TELEGRAM CONFIGURATION (Required)
# -----------------------------------------------------------------------------
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Comma-separated list of Telegram user IDs allowed to use this bot
# Get your ID from @userinfobot on Telegram
TELEGRAM_ALLOWED_USERS=123456789,987654321

# Admin users (optional) - can execute dangerous commands
TELEGRAM_ADMIN_USERS=123456789

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION (Required)
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=talk2server
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password

# -----------------------------------------------------------------------------
# LLM PROVIDERS (At least one recommended)
# -----------------------------------------------------------------------------
# All providers are optional - bot uses fallback chain:
# Ollama (local) -> Groq (cloud) -> OpenAI (cloud)

# Groq API (Free tier available) - https://console.groq.com
GROQ_API_KEY=gsk_your_groq_api_key_here

# OpenAI API - https://platform.openai.com
OPENAI_API_KEY=sk-your_openai_api_key_here

# Anthropic API (for direct API access, not Claude Code)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# -----------------------------------------------------------------------------
# LOCAL LLM SETTINGS (Ollama)
# -----------------------------------------------------------------------------
OLLAMA_URL=http://localhost:11434
DEFAULT_OLLAMA_MODEL=llama3.2:3b

# -----------------------------------------------------------------------------
# CLAUDE CODE SETTINGS
# -----------------------------------------------------------------------------
# Model for Claude Code: sonnet, opus, haiku
DEFAULT_CLAUDE_MODEL=opus

# Working directory for Claude Code operations
WORKSPACE_DIR=/home/your_user/claude_workspace

# -----------------------------------------------------------------------------
# MONITORING & ALERTS
# -----------------------------------------------------------------------------
# Enable/disable smart alerts
ALERT_ENABLED=true

# Alert thresholds
ALERT_GPU_TEMP=80
ALERT_GPU_MEMORY=95
ALERT_DISK=90
ALERT_MEMORY=90
ALERT_CPU=95

# Alert timing (seconds)
ALERT_CHECK_INTERVAL=60
ALERT_COOLDOWN=300

# Critical services to monitor (comma-separated)
CRITICAL_SERVICES=postgresql,docker

# -----------------------------------------------------------------------------
# RATE LIMITING
# -----------------------------------------------------------------------------
RATE_LIMIT=60
RATE_WINDOW=60

# -----------------------------------------------------------------------------
# SERVICE URLS (Optional)
# -----------------------------------------------------------------------------
PROMETHEUS_URL=http://localhost:9090

# -----------------------------------------------------------------------------
# EMAIL NOTIFICATIONS (Optional)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=your_email@gmail.com

# -----------------------------------------------------------------------------
# HEALTH CHECK
# -----------------------------------------------------------------------------
HEALTH_CHECK_PORT=8765

# -----------------------------------------------------------------------------
# PATHS
# -----------------------------------------------------------------------------
WORKING_DIR=/home/your_user
LOG_DIR=/home/your_user/talk2yourServer/logs
